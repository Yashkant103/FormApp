@*
<div class="container mt-5 studentProfile">
    <div class="row">
        <div class="col-md-3">
            <div class="card profile-card">
                <img src="~/img/form.jpg" alt="Profile Picture" class="card-img-top profile-picture">
                <div class="card-body text-center">
                    <h5 class="card-title profile-title">@Model.StudentName</h5>
                    <p class="card-text profile-subtitle">Branch ID: @Model.BranchName</p>
                    <p class="card-text profile-subtitle">City: @Model.CityName</p>
                    <p class="card-text profile-subtitle">Country: USA</p>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card profile-card">
                <div class="card-header">
                    <h4 class="mb-0">User Profile</h4>
                </div>
                <div class="card-body">
                    <form>
                        <!-- Personal Information -->
                        <div class="form-group">
                            <label class="profile-field-label" for="studentName">Student Name</label>
                            <input type="text" class="form-control profile-field-value" id="studentName" value="@Model.StudentName" disabled>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-label" for="mobileNoStudent">Mobile Number (Student)</label>
                            <input type="tel" class="form-control profile-field-value" id="mobileNoStudent" value="@Model.MobileNoStudent" disabled>
                        </div>
                        <div class="form-group">
                            <label class="profile-field-label" for="email">Email</label>
                            <input type="email" class="form-control profile-field-value" id="email" value="@Model.Email" disabled>
                        </div>
                        <!-- Father's Information -->
                        <div class="form-group">
                            <label class="profile-field-label" for="mobileNoFather">Mobile Number (Father)</label>
                            <input type="tel" class="form-control profile-field-value" id="mobileNoFather" value="@Model.MobileNoFather" disabled>
                        </div>
                        <!-- Address -->
                        <div class="form-group">
                            <label class="profile-field-label" for="address">Address</label>
                            <textarea class="form-control profile-field-value" id="address" rows="3" disabled>@Model.Address</textarea>
                        </div>
                        <!-- Additional Information -->
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="profile-field-label" for="birthdate">Birth Date</label>
                                <input type="date" class="form-control profile-field-value" id="birthdate" value="@Model.BirthDate" disabled>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="profile-field-label" for="age">Age</label>
                                <input type="text" class="form-control profile-field-value" id="age" value="@Model.Age" disabled>
                            </div>
                        </div>
                        <!-- Account Information -->
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="profile-field-label" for="isActive">Account Status</label>
                                <input type="text" class="form-control profile-field-value" id="isActive" value="@Model.IsActive" disabled>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="profile-field-label" for="gender">Gender</label>
                                <input type="text" class="form-control profile-field-value" id="gender" value="@Model.Gender" disabled>
                            </div>
                        </div>
                        <!-- Password -->
                        <div class="form-group">
                            <label class="profile-field-label" for="password">Password</label>
                            <input type="password" class="form-control profile-field-value" id="password" value="@Model.Password" disabled>
                        </div>
                    </form>
                    <button type="button" class="btn btn-primary profile-edit-button">Edit Profile</button>
                </div>
            </div>
        </div>
    </div>
</div>*@

<div class="pagetitle">
	<h1>User Profile</h1>
	<nav>
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
			<li class="breadcrumb-item"><a asp-action="Index" asp-controller="MST_Student" asp-area="MST_Student">Student List</a></li>
			<li class="breadcrumb-item active">@(Model.StudentName.split().join("-"))</li>
		</ol>
	</nav>
</div><!-- End Page Title -->

<section class="section profile">
	<div class="row">
		<div class="col-xl-4">

			<div class="card">
				<div class="card-body profile-card pt-4 d-flex flex-column align-items-center justify-content-stretch">

					<img src="~/assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
					<h2>@Model.StudentName</h2>
					<h3>Web Designer</h3>

					<div class="row w-100">
						<div class="col-lg-3 col-md-4 label">Email</div>
						<div class="col-lg-9 col-md-8">@Model.Email</div>
					</div>

					<div class="row w-100">
						<div class="col-lg-3 col-md-4 label">Branch Name</div>
						<div class="col-lg-9 col-md-8">@Model.BranchName</div>
					</div>
				</div>
			</div>

		</div>

		<div class="col-xl-8">

			<div class="card">
				<div class="card-body pt-3">
					<!-- Bordered Tabs -->
					<ul class="nav nav-tabs nav-tabs-bordered">

						<li class="nav-item">
							<button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
						</li>

						<li class="nav-item">
							<form asp-action="AddEdit" asp-area="MST_Student" asp-controller="MST_Student">
								<input type="hidden" name="StudentID" value="@Model.StudentID" />
								<button type="submit" class="nav-link">Edit Profile</button>
							</form>
						</li>
						
						<li class="nav-item">
							<button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password">Change Password</button>
						</li>

					</ul>
					<div class="tab-content pt-2">

						<div class="tab-pane fade show active profile-overview" id="profile-overview">
							
							<h5 class="card-title">Profile Details</h5>

							<div class="row">
								<div class="col-lg-3 col-md-4 label ">Full Name</div>
								<div class="col-lg-9 col-md-8">@Model.StudentName</div>
							</div>

							
							<div class="row">
								<div class="col-lg-3 col-md-4 label">Email</div>
								<div class="col-lg-9 col-md-8">@Model.Email</div>
							</div>

							<div class="row">
								<div class="col-lg-3 col-md-4 label">Branch Name</div>
								<div class="col-lg-9 col-md-8">@Model.BranchName</div>
							</div>


							<div class="row">
								<div class="col-lg-3 col-md-4 label">Phone (Student)</div>
								<div class="col-lg-9 col-md-8">@Model.MobileNoStudent</div>
							</div>

							<div class="row">
								<div class="col-lg-3 col-md-4 label">Phone (Father)</div>
								<div class="col-lg-9 col-md-8">@Model.MobileNoFather</div>
							</div>

							<div class="row">
								<div class="col-lg-3 col-md-4 label">Address</div>
								<div class="col-lg-9 col-md-8">@Model.Address</div>
							</div>

							<div class="row">
								<div class="col-lg-3 col-md-4 label">City</div>
								<div class="col-lg-9 col-md-8">@Model.CityName</div>
							</div>


						</div>

						<div class="tab-pane fade profile-edit pt-3" id="profile-edit">

							<!-- Profile Edit Form -->
							<form>
								<div class="row mb-3">
									<label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
									<div class="col-md-8 col-lg-9">
										<img src="assets/img/profile-img.jpg" alt="Profile">
										<div class="pt-2">
											<a href="#" class="btn btn-primary btn-sm" title="Upload new profile image"><i class="bi bi-upload"></i></a>
											<a href="#" class="btn btn-danger btn-sm" title="Remove my profile image"><i class="bi bi-trash"></i></a>
										</div>
									</div>
								</div>

								<div class="row mb-3">
									<label for="fullName" class="col-md-4 col-lg-3 col-form-label">Full Name</label>
									<div class="col-md-8 col-lg-9">
										<input name="fullName" type="text" class="form-control" id="fullName" value="Kevin Anderson">
									</div>
								</div>

								<div class="row mb-3">
									<label for="about" class="col-md-4 col-lg-3 col-form-label">About</label>
									<div class="col-md-8 col-lg-9">
										<textarea name="about" class="form-control" id="about" style="height: 100px">Sunt est soluta temporibus accusantium neque nam maiores cumque temporibus. Tempora libero non est unde veniam est qui dolor. Ut sunt iure rerum quae quisquam autem eveniet perspiciatis odit. Fuga sequi sed ea saepe at unde.</textarea>
									</div>
								</div>

								<div class="row mb-3">
									<label for="company" class="col-md-4 col-lg-3 col-form-label">Company</label>
									<div class="col-md-8 col-lg-9">
										<input name="company" type="text" class="form-control" id="company" value="Lueilwitz, Wisoky and Leuschke">
									</div>
								</div>

								<div class="row mb-3">
									<label for="Job" class="col-md-4 col-lg-3 col-form-label">Job</label>
									<div class="col-md-8 col-lg-9">
										<input name="job" type="text" class="form-control" id="Job" value="Web Designer">
									</div>
								</div>

								<div class="row mb-3">
									<label for="Country" class="col-md-4 col-lg-3 col-form-label">Country</label>
									<div class="col-md-8 col-lg-9">
										<input name="country" type="text" class="form-control" id="Country" value="USA">
									</div>
								</div>

								<div class="row mb-3">
									<label for="Address" class="col-md-4 col-lg-3 col-form-label">Address</label>
									<div class="col-md-8 col-lg-9">
										<input name="address" type="text" class="form-control" id="Address" value="A108 Adam Street, New York, NY 535022">
									</div>
								</div>

								<div class="row mb-3">
									<label for="Phone" class="col-md-4 col-lg-3 col-form-label">Phone</label>
									<div class="col-md-8 col-lg-9">
										<input name="phone" type="text" class="form-control" id="Phone" value="(436) 486-3538 x29071">
									</div>
								</div>

								<div class="row mb-3">
									<label for="Email" class="col-md-4 col-lg-3 col-form-label">Email</label>
									<div class="col-md-8 col-lg-9">
										<input name="email" type="email" class="form-control" id="Email" value="k.anderson@example.com">
									</div>
								</div>

								

								<div class="text-center">
									<button type="submit" class="btn btn-primary">Save Changes</button>
								</div>
							</form><!-- End Profile Edit Form -->

						</div>

						

						<div class="tab-pane fade pt-3" id="profile-change-password">
							<!-- Change Password Form -->
							<form>

								<div class="row mb-3">
									<label for="currentPassword" class="col-md-4 col-lg-3 col-form-label">Current Password</label>
									<div class="col-md-8 col-lg-9">
										<input name="password" type="password" class="form-control" id="currentPassword">
									</div>
								</div>

								<div class="row mb-3">
									<label for="newPassword" class="col-md-4 col-lg-3 col-form-label">New Password</label>
									<div class="col-md-8 col-lg-9">
										<input name="newpassword" type="password" class="form-control" id="newPassword">
									</div>
								</div>

								<div class="row mb-3">
									<label for="renewPassword" class="col-md-4 col-lg-3 col-form-label">Re-enter New Password</label>
									<div class="col-md-8 col-lg-9">
										<input name="renewpassword" type="password" class="form-control" id="renewPassword">
									</div>
								</div>

								<div class="text-center">
									<button type="submit" class="btn btn-primary">Change Password</button>
								</div>
							</form><!-- End Change Password Form -->

						</div>

					</div><!-- End Bordered Tabs -->

				</div>
			</div>

		</div>
	</div>
</section>
